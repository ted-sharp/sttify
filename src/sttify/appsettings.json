{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "System": "Warning"
    },
    "Console": {
      "IncludeScopes": false
    },
    "File": {
      "Path": "logs/sttify-.log",
      "RollingInterval": "Day",
      "RetainedFileCountLimit": 7,
      "FileSizeLimitBytes": 10485760
    }
  },
  "Telemetry": {
    "EnableConsoleLogging": false,
    "MaskTextInLogs": false,
    "MinimumLevel": "Information",
    "BatchSize": 50,
    "BatchIntervalMs": 100
  },
  "Application": {
    "DefaultLogLevel": "Information",
    "DebugLogLevel": "Debug",
    "EnableDetailedLogging": false
  },
  "Engines": {
    "Vosk": {
      "ModelsUrl": "https://alphacep.com/vosk/models",
      "RecommendedModels": [
        {
          "Name": "vosk-model-ja-0.22",
          "Size": "1.1GB",
          "Language": "Japanese",
          "Description": "Large Japanese model with high accuracy",
          "DownloadUrl": "https://alphacep.com/vosk/models/vosk-model-ja-0.22.zip"
        },
        {
          "Name": "vosk-model-small-ja-0.22", 
          "Size": "125MB",
          "Language": "Japanese",
          "Description": "Small Japanese model for faster processing",
          "DownloadUrl": "https://alphacep.com/vosk/models/vosk-model-small-ja-0.22.zip"
        }
      ]
    },
    "Vibe": {
      "DocumentationUrl": "https://github.com/thewh1teagle/vibe",
      "ModelsUrl": "https://github.com/thewh1teagle/vibe/releases"
    },
    "Azure": {
      "DocumentationUrl": "https://docs.microsoft.com/en-us/azure/cognitive-services/speech-service/"
    }
  },
  "Performance": {
    "ArrayPoolMaxArrayLength": 1048576,
    "BoundedQueueMaxSize": 1000,
    "CacheSettings": {
      "ResponseCacheMaxEntries": 100,
      "ResponseCacheTtlMinutes": 30,
      "FFTCacheEnabled": true,
      "ConfigCacheEnabled": true
    }
  }
}