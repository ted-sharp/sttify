<Window x:Class="Sttify.Views.VoskModelInfoDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vosk="clr-namespace:Sttify.Corelib.Engine.Vosk;assembly=sttify.corelib"
        mc:Ignorable="d"
        Title="Vosk Models Information"
        Width="600" Height="500"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResize">

    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
    </Window.Resources>

    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Grid.Row="0"
                   Text="ðŸ“¦ Available Vosk Models"
                   FontSize="18"
                   FontWeight="Bold"
                   Margin="0,0,0,15"/>

        <!-- Models List -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <ItemsControl x:Name="ModelsListControl">
                <ItemsControl.ItemTemplate>
                    <DataTemplate DataType="{x:Type vosk:VoskModelInfo}">
                        <Border BorderBrush="#FFCCCCCC"
                                BorderThickness="1"
                                CornerRadius="5"
                                Padding="15"
                                Margin="0,0,0,10"
                                Background="White">
                            <StackPanel>
                                <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                                    <TextBlock Text="{Binding Name}"
                                               FontWeight="Bold"
                                               FontSize="14"/>
                                    <Border Background="#FF4CAF50"
                                            CornerRadius="3"
                                            Padding="5,2"
                                            Margin="10,0,0,0"
                                            Visibility="{Binding IsRecommended, Converter={StaticResource BooleanToVisibilityConverter}}">
                                        <TextBlock Text="RECOMMENDED"
                                                   FontSize="10"
                                                   Foreground="White"
                                                   FontWeight="Bold"/>
                                    </Border>
                                </StackPanel>

                                <TextBlock Text="{Binding Description}"
                                           Margin="0,0,0,5"
                                           TextWrapping="Wrap"
                                           Foreground="Gray"/>

                                <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                                    <TextBlock Text="Size: " FontWeight="Bold"/>
                                    <TextBlock Text="{Binding Size}" Margin="0,0,15,0"/>
                                    <TextBlock Text="Language: " FontWeight="Bold"/>
                                    <TextBlock Text="{Binding Language}"/>
                                </StackPanel>

                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="Download URL: " FontWeight="Bold"/>
                                    <TextBlock>
                                        <Hyperlink NavigateUri="{Binding DownloadUrl}" RequestNavigate="OnHyperlinkNavigate">
                                            <TextBlock Text="{Binding DownloadUrl}" TextDecorations="Underline"/>
                                        </Hyperlink>
                                    </TextBlock>
                                </StackPanel>
                            </StackPanel>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>

        <!-- Footer -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,15,0,0">
            <Button Content="More Models Online"
                    Click="OnMoreModelsClick"
                    Width="140"
                    Margin="0,0,10,0"/>
            <Button Content="Close"
                    Click="OnCloseClick"
                    Width="80"
                    IsCancel="True"/>
        </StackPanel>
    </Grid>
</Window>
