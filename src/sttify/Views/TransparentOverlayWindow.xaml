<Window x:Class="Sttify.Views.TransparentOverlayWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:controls="clr-namespace:Sttify.Controls"
        Title="Sttify Overlay"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        ShowInTaskbar="False"
        Topmost="True"
        ResizeMode="NoResize"
        Focusable="False"
        SizeToContent="WidthAndHeight"
        UseLayoutRounding="True"
        SnapsToDevicePixels="True"
        Visibility="Collapsed">
    <Grid>
        <Border x:Name="OverlayContainer"
                Background="#00000000"
                CornerRadius="8"
                Padding="12"
                HorizontalAlignment="Center"
                VerticalAlignment="Bottom"
                Margin="32,32,32,48">
            <controls:OutlinedText x:Name="OverlayText"
                                    Text=""
                                    FontFamily="Segoe UI"
                                    FontSize="28"
                                    Fill="White"
                                    Stroke="#CC000000"
                                    StrokeThickness="3"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    TextAlignment="Center"/>
        </Border>
    </Grid>
</Window>

